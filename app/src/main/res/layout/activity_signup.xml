<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_grey_200"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toolbar="http://schemas.android.com/tools">
    <include layout="@layout/include_toolbar"></include>
    <LinearLayout
        android:id="@+id/phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/edit_shape"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="用户"
            android:textSize="15sp"
            android:textColor="@color/md_grey_800"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextStyle"
            app:hintEnabled="true"
            >
            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:inputType="phone"
                android:hint="请输入手机号"
                android:background="@null"
                android:textSize="15sp"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/get_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/phone_layout"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="28dp"
        >


        <EditText
            android:id="@+id/edt_verify"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="0dp"
            android:layout_weight="2"
            android:textSize="15sp"
            android:background="@drawable/edit_shape"
            android:maxLength="10"
            android:padding="5dp"
            android:inputType="number"
            />

        <Button
            android:id="@+id/btu_verify"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="获取验证码"
            android:textSize="15dp"
            android:textColor="#F8F8FF"
            android:layout_weight="3"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_shape"

            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/pass_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/get"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/edit_shape">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="密码"
            android:textSize="15sp"
            android:textColor="@color/md_grey_800"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            app:hintTextAppearance="@style/TextStyle"
            app:passwordToggleEnabled="true"
            >
            <EditText
                android:id="@+id/edt_pass"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:inputType="textPassword"
                android:hint="请输入密码"
                android:background="@null"
                android:textSize="15sp"
                />
    </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btu_sign"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_below="@+id/pass_layout"
        android:layout_marginTop="36dp"
        android:background="@drawable/button_shape"
        android:text="注册"
        android:textColor="#F8F8FF"
        android:textSize="15sp" />
</LinearLayout>
